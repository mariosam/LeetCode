import TEST from 'tape'
import { maximizeSquareHoleArea } from './MaximizeAreaOfSquareHoleInGrid.js'

TEST('Starting MaximizeAreaOfSquareHoleInGrid test...', (t) => {
    //Test 1
    let want = 4
    let got = maximizeSquareHoleArea( 2, 1, [2,3], [2] )
    t.assert( want === got, "Expect: "+want)
    //Test 2
    want = 4
    got = maximizeSquareHoleArea( 1, 1, [2], [2] )
    t.assert( want === got, "Expect: "+want)
    //Test 3
    want = 4
    got = maximizeSquareHoleArea( 2, 3, [2,3], [2,4] )
    t.assert( want === got, "Expect: "+want)

    t.end()
})
